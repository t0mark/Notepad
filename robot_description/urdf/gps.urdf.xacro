<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- GPS Link -->
  <link name="gps_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00001" ixy="0" ixz="0"
               iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.15 0.05"/>
      </geometry>
      <material name="gps_red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.15 0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- GPS Joint: top_plate_link에서 60cm 위로 -->
  <joint name="gps_joint" type="fixed">
    <origin xyz="0.0 0.0 0.4" rpy="0 0 0"/>
    <parent link="top_plate_link"/>
    <child link="gps_link"/>
  </joint>

  <!-- Gazebo GPS material -->
  <gazebo reference="gps_link">
    <material>Gazebo/Red</material>
  </gazebo>

