<?xml version="1.0"?>
<launch>
  <!-- ===================================================== -->
  <!-- Gazebo Spawn Launch -->
  <!-- Gazebo 실행 + 로봇 스폰 -->
  <!-- ===================================================== -->

  <!-- Arguments -->
  <arg name="world_name" default="example" doc="World name: empty, example, city"/>
  <arg name="z_position" default="0.2" doc="Initial height of the robot"/>

  <!-- GPU 가속화 -->
  <env name="CUDA_VISIBLE_DEVICES" value="0"/>
  <env name="GAZEBO_GPU_RAY" value="1"/>
  <env name="SVGA_VGPU10" value="1"/>

  <!-- 환경 변수 설정 -->
  <env name="HUSKY_LMS1XX_ENABLED" value="false"/>
  <env name="HUSKY_UR5_ENABLED" value="false"/>
  <env name="GAZEBO_MODEL_PATH" value="$(find gazebo_simulation)/models:$(optenv GAZEBO_MODEL_PATH)"/>

  <!-- Gazebo 월드 실행 -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find gazebo_simulation)/worlds/$(arg world_name).world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="false"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- URDF 모델 로드 -->
  <include file="$(find robot_description)/launch/robot_description.launch">
    <arg name="publish_odom_tf" value="false"/>
  </include>

  <!-- Gazebo에 로봇 스폰 -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
        output="screen"
        args="-urdf -model husky -param robot_description -z $(arg z_position)"/>

  <!-- IMU timestamp fix (sim time -> real time) -->
  <node pkg="gazebo_simulation" type="timestamp_fix.py" name="timestamp_fix" output="screen"/>

</launch>
