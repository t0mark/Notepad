<?xml version="1.0"?>
<launch>
  <!-- ===================================================== -->
  <!-- Gazebo Spawn Launch -->
  <!-- Gazebo 실행 + 로봇 스폰 -->
  <!-- ===================================================== -->

  <!-- Arguments -->
  <arg name="z_position" default="0.2" doc="Initial height of the robot"/>

  <!-- GPU 가속화 -->
  <env name="CUDA_VISIBLE_DEVICES" value="0"/>
  <env name="GAZEBO_GPU_RAY" value="1"/>
  <env name="SVGA_VGPU10" value="1"/>

  <!-- 환경 변수 설정 -->
  <env name="HUSKY_LMS1XX_ENABLED" value="false"/>
  <env name="HUSKY_UR5_ENABLED" value="false"/>
  <env name="GAZEBO_MODEL_PATH" value="$(find dwa)/models:$(optenv GAZEBO_MODEL_PATH)"/>
  
  <!-- Gazebo 월드 실행 -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="$(find dwa)/worlds/example.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- URDF 모델 로드 및 TF 발행 -->
  <include file="$(find robot_description)/launch/robot_description.launch"/>

  <!-- Static TF: map -> odom (시뮬레이션 환경용, ground truth) -->
  <!-- 실제 로봇에서는 AMCL 또는 SLAM이 이 TF를 발행 --> 
  <!-- Gazebo보다 먼저 시작해서 map 프레임을 TF 트리 루트로 설정 -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_odom_publisher"
        args="0 0 0 0 0 0 map odom"/>

  <!-- Gazebo에 로봇 스폰 -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
        output="screen"
        args="-urdf -model husky -param robot_description -z $(arg z_position)"/>

</launch>
