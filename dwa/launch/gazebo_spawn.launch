<?xml version="1.0"?>
<launch>
  <!-- ===== 실제 환경/시뮬레이션 환경 담당 ===== -->
  <!-- 시뮬레이션: Gazebo + 로봇 스폰 -->
  <!-- 실제 환경: 하드웨어 연결 + 센서 드라이버 -->
  
  <!-- Gazebo 시작 -->
  <!-- GPU 가속화 -->
  <env name="CUDA_VISIBLE_DEVICES" value="0"/>
  <env name="GAZEBO_GPU_RAY" value="1"/>
  <env name="SVGA_VGPU10" value="1"/>
  
  <!-- 환경 변수 설정 -->
  <env name="HUSKY_LMS1XX_ENABLED" value="false"/>
  <env name="HUSKY_UR5_ENABLED" value="false"/>
  <env name="GAZEBO_MODEL_PATH" value="$(find dwa)/models:$(optenv GAZEBO_MODEL_PATH)"/>

  <!-- Gazebo 월드 실행 -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="$(find dwa)/worlds/citysim_gazebo.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- Ouster + GPS가 장착된 Husky 로봇 설정 -->
  <param name="robot_description" command="$(find xacro)/xacro '$(find dwa)/urdf/custom_description.urdf.xacro'"/>

  <!-- 로봇 스폰 -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
        output="screen"
        args="-urdf -model husky -param robot_description -z 0.2"/>

  <!-- map → odom static transform (Gazebo 시뮬레이션용) -->
  <!-- SLAM이 없으므로 map과 odom을 동일하게 설정 (drift 없음) -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="map_odom_broadcaster"
        args="0 0 0 0 0 0 map odom"/>
</launch>